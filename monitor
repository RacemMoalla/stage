pipeline {
    agent any

    environment {
        PYTHON_SCRIPT = 'monitor.py'
        NAMESPACE = 'default'
        POD_NAME = 'podmigration-testapp-64fbc98b-hj8z9'
        JENKINS_URL = 'http://34.163.186.12:8080/'
        KUBE_CONFIG_PATH_EU = credentials('kub-eu')
        KUBE_CONFIG_PATH_NA = credentials('kube-na')
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/RacemMoalla/stage.git', branch: 'main'
            }
        }

        stage('Run Monitor Script') {
            steps {
                script {
                    // Assurez-vous que le script Python est exécutable
                    sh "chmod +x ${env.PYTHON_SCRIPT}"
                    // Exécutez le script Python avec les arguments nécessaires
                    sh "python3 ${env.PYTHON_SCRIPT} ${env.NAMESPACE} ${env.POD_NAME} ${env.JENKINS_URL} ${env.KUBE_CONFIG_PATH_EU} ${env.KUBE_CONFIG_PATH_NA}"
                }
            }
        }
    }


}
