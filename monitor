pipeline {
    agent any

    environment {
        PYTHON_SCRIPT = 'monitor.py'
        NAMESPACE = 'default'
        POD_NAME = 'podmigration-testapp-64fbc98b-hj8z9'
        JENKINS_URL = 'http://34.163.186.12:8080/'
        KUBE_CONFIG_PATH_EU = credentials('kub-eu')
        KUBE_CONFIG_PATH_NA = credentials('kube-na')
    }

    stages {
        stage('Setup Python Environment') {
            steps {
                script {
                    // Créer l'environnement virtuel si non existant
                    sh """
                    if [ ! -d "${env.VENV_PATH}" ]; then
                        python3 -m venv ${env.VENV_PATH}
                    fi
                    """
                    // Activer l'environnement virtuel et installer les dépendances
                    sh """
                    source ${env.VENV_PATH}/bin/activate
                    pip install requests kubernetes
                    """
                }
            }
        }

        stage('Run Monitor Script') {
            steps {
                script {
                    // Exécuter le script Python avec l'environnement virtuel activé
                    sh """
                    source ${env.VENV_PATH}/bin/activate
                    chmod +x ${env.PYTHON_SCRIPT}
                    python3 ${env.PYTHON_SCRIPT} ${env.NAMESPACE} ${env.POD_NAME} ${env.JENKINS_URL} ${env.KUBE_CONFIG_PATH_NA} ${env.KUBE_CONFIG_PATH_EU}
                    """
                }
            }
        }
    }

}
