pipeline {
    agent any

    environment {
        PYTHON_SCRIPT = 'monitor.py'
        NAMESPACE = 'default'
        POD_NAME = 'podmigration-testapp-64fbc98b-hj8z9'
        JENKINS_URL = 'http://34.163.186.12:8080'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/RacemMoalla/stage.git', branch: 'main'
            }
        }

        stage('Install Python Dependencies') {
            steps {
                script {
                    sh 'python3 -m venv venv'
                    sh './venv/bin/pip install -r requirements.txt'
                }
            }
        }

        stage('Run Monitor Script') {
            environment {
                KUBE_CONFIG_PATH_EU = credentials('kub-eu')  // Référence à vos informations d'identification Kubernetes
            }
            steps {
                script {
                    sh "chmod +x ${env.PYTHON_SCRIPT}"
                    withKubeConfig(credentialsId: 'kub-eu', caCertificate: '', serverUrl: 'https://34.155.30.68') {
                        def scriptOutput = sh(returnStdout: true, script: "./venv/bin/python ${env.PYTHON_SCRIPT} ${env.NAMESPACE} ${env.POD_NAME} ${env.JENKINS_URL} ${env.KUBE_CONFIG_PATH_EU}")
                        echo scriptOutput
                    }
                }
            }
        }
    }
}
